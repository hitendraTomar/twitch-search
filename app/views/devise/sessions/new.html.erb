<div class="container">
  <div class="row login-page">
    <div class="col-md-6 col-sm-6 form-group">
      <h2 class="display-3 mt-5"><b>Twich Wrapper</b></h2>
    </div>
    <div class= "col-md-6 col-sm-6 form-group">
      <div class="container login-shadow">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group">
          <h2 class="text-left"><b>Sign In</b></h2>
        </div>
        <hr>
        <div class="form">
          <div class="form-group">
            <%= f.email_field :email,class: "form-control mb-3",placeholder: "Email"%>
          </div>
          <div class="form-group">
            <%= f.password_field :password,class: "form-control mb-3",placeholder: "Password" %>
          </div>
        <div>

        <div class="actions">
          <%= f.submit "Sign in",style: "height:40px; width:200px",class:"btn btn-success bg-blue text-white" %>
        </div>
        <hr>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
