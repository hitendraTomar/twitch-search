<div class="row">
  <div class="col-md-8 mx-auto">
    <%= form_tag results_path, { id: "search-result-form" ,class: "d-flex me-2", method: :post, remote: true } do %>
      <div class="input-group">
        <%= text_field_tag "search_term", "", class: "form-control border", placeholder: "Search", autocomplete: :off %>
        <%= button_tag value: "search" ,type: :submit, id: "search-twitcher", class: "btn btn-primary" do %>
          <i class="fa-solid fa-magnifying-glass"></i> Search
        <% end %>
        <%= button_tag value: "feeling_lucky" ,type: :submit, id: "search-twitcher", class: "btn btn-success" do %>
          <i class="fa-solid fa-slot-machine"></i> I am feeling lucky
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div id="results"></div>
</div>

<!-- Loader -->
<div id="loading-results" class="text-center mt-4" style="display: none;">
  <div class="spinner-border text-primary text-center" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div>
